<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iillyyaa2033.mud.editor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk 
        android:minSdkVersion="8" 
        android:targetSdkVersion="21" />
	
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@android:drawable/gallery_thumb"
		android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:label="@string/app_name"
            android:name=".MainActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		
		<activity 
			android:name="Preferences" 
			android:label="Настройки"	
			android:parentActivityName="MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="MainActivity" />
		</activity>

		<activity
			android:theme="@style/FileChooserTheme"
			android:name="FileChooserActivity" 
			android:label="Выбор файла">
		</activity>
		
		<activity 
			android:name=".luaeditor.LuaEditorActivity" 
			android:label="Редактор lua"
			android:launchMode="singleTask"
			android:parentActivityName="MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="MainActivity" />
		</activity>
		<activity 
			android:name=".mapeditor.MapEditorActivity" 
			android:label="Редактор карт"
			android:launchMode="singleTask"
			android:parentActivityName=".MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value=".MainActivity" />
		</activity>
		<activity 
			android:name=".mapeditor.BuildingEditorActivity" 
			android:label="Редактор зданий"/>
		<activity 
			android:name=".mapeditor.ObjectEditorActivity" 
			android:label="Редактор объекта" />
		<activity 
			android:name="HelpActivity" 
			android:label="Справка"
			android:parentActivityName="MainActivity">
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="MainActivity" />
		</activity>
    </application>

</manifest>
